<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ingenieria.bacteriumjuego"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ingenieria.bacteriumjuego.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ingenieria.bacteriumjuego.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.ingenieria.bacteriumjuego.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.ingenieria.bacteriumjuego.JugadorActivity"
            android:label="@string/title_activity_jugador" >
        </activity>
        <activity
            android:name="com.ingenieria.bacteriumjuego.TorneosActivity"
            android:label="@string/title_activity_torneos" >
        </activity>
        <activity
            android:name="com.ingenieria.bacteriumjuego.PartidasActivity"
            android:label="@string/title_activity_partidas" >
        </activity>
    </application>

</manifest>
